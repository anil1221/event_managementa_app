<div id="<%= dom_id venue %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= venue.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Address:</strong>
    <%= venue.address %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Gmap:</strong>
    <%= venue.gmap %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Seating capacity:</strong>
    <%= venue.seating_capacity %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Add information:</strong>
    <%= venue.add_information %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this venue", venue, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this venue", edit_venue_path(venue), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
